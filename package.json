{
  "name": "@stackblitz/git-api",
  "version": "1.0.0",
  "type": "module",
  "description": "A GitHub CLI that uses the GitHub API instead of git binary",
  "bin": {
    "git-api": "./src/cli.js"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node src/cli.js",
    "submodule:clone": "node src/cli.js submodule add",
    "submodule:push": "node src/cli.js submodule push",
    "submodule:pull": "node src/cli.js submodule pull",
    "submodule:status": "node src/cli.js submodule status"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "chalk": "^5.3.0",
    "glob": "^10.3.10",
    "diff": "^5.1.0",
    "minimatch": "^9.0.3"
  },
  "keywords": [
    "git",
    "github",
    "cli",
    "api"
  ],
  "author": "StackBlitz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stackblitz/git-api.git"
  },
  "bugs": {
    "url": "https://github.com/stackblitz/git-api/issues"
  },
  "homepage": "https://github.com/stackblitz/git-api#readme",
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}