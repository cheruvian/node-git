{
  "name": "@cheruvian/bolt-git",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A (neutered) GitHub CLI that uses the GitHub API instead of git binary",
  "bin": {
    "git-api": "./src/cli.js"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node src/cli.js",
    "postinstall": "chmod +x ./src/cli.js"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "chalk": "^5.3.0",
    "glob": "^10.3.10",
    "diff": "^5.1.0",
    "minimatch": "^9.0.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheruvian/bolt-git.git"
  },
  "engines": {
    "node": ">=16"
  }
}